            <li class="has-dropdown">
                <a asp-controller="Home" asp-action="Index">Главная </a>
            </li>
            <li>
                <a asp-action="Abouts">О Компании</a>
            </li>
            <li>
                <a class="active main-menu-link" asp-controller="Home" asp-action="Contact">Контакты</a>
