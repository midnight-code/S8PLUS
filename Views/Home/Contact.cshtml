    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe id="gmap_canvas" src="https://yandex.ru/map-widget/v1/?um=constructor%3Ae20d60ffdad741537ab5faa1addbe1a0fa1ed905ab624dab7cabd1ca84828d4d&amp;source=constructor"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...::::End  Map Section:::... -->
<!-- ...::::Start Contact Section:::... -->
<div class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <!-- Start Contact Details -->
                <div class="contact-details-wrapper section-top-gap-100">
                    <div class="contact-details">
                        <!-- Start Contact Details Single Item -->
                        <div class="contact-details-single-item">
                            <div class="contact-details-icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="contact-details-content contact-phone">
                                <a href="tel:+78007003316">+7 800 700 33 16</a>
                            </div>
                        </div> <!-- End Contact Details Single Item -->
                        <!-- Start Contact Details Single Item -->
                        <div class="contact-details-single-item">
                            <div class="contact-details-icon">
                                <i class="fa fa-globe"></i>
                            </div>
                            <div class="contact-details-content contact-phone">
                                <a href="mailto:info@s8plus.ru">info@s8plus.ru</a>
                                <a href="https://s8pus.ru">www.s8plus.ru</a>
                            </div>
                        </div> <!-- End Contact Details Single Item -->
                        <!-- Start Contact Details Single Item -->
                        <div class="contact-details-single-item">
                            <div class="contact-details-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="contact-details-content contact-phone">
                                <span>344065, г.Ростов-на-Дону,</span>
                                <span>ул. Троллейбусная 24/2В.</span>
                            </div>
                        </div> <!-- End Contact Details Single Item -->
                    </div>
                </div> <!-- End Contact Details -->
            </div>
            <div class="col-lg-8">
                <div class="contact-form section-top-gap-100">
                    <h3>Обратная связь</h3>
                    <form asp-action="Contact" method="POST" id="demo-form">
                        <input type="hidden" name="captcha" id="captchaInput" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="default-form-box mb-20">
                                    <label for="contact-name">Имя</label>
                                    <input type="text" name="nameuser" id="contact-name" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="default-form-box mb-20">
                                    <label for="contact-email">Email</label>
                                    <input type="email" name="mailto" id="contact-email" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="default-form-box mb-20">
                                    <label for="contact-subject">Тема сообщения</label>
                                    <input type="text" name="subjest" id="contact-subject" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="default-form-box mb-20">
                                    <label for="contact-message">Текст сообщения</label>
                                    <textarea id="contact-message" name="message" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button class="g-recaptcha contact-submit-btn"
                                        data-sitekey="reCAPTCHA_site_key"
                                        data-callback='onSubmit'
                                        data-action='submit'>
                                    Отправить
                                </button>
                            </div>
                        </div>
                    </form>
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["googleReCaptcha:SiteKey"]"></script>
    <script>
        grecaptcha.ready(function() {
            window.grecaptcha.execute('@Configuration["googleReCaptcha:SiteKey"]', { action: 'home' }).then(function (token) {
                $("#captchaInput").val(token);
            });
        });
    </script>
}
